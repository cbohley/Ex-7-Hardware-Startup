<MainScreen>:
    name: 'main'
    on_enter: root.start_ultra_thread()
    FloatLayout:
        size_hint: None, None

    Slider:
        id: slider
        min: 0
        max: 100
        size_hint: 0.5, None
        step: 1
        size: 400, 30
        center_y: 1000
        font_size: 20
        orientation: 'horizontal'
        on_touch_move: root.sliderMotorSpeed()

    DPEAButton:
        id: motor_button
        text: "motor"
        size: 100, 100
        x: root.width * 0.25
        y:root.height * 0.5
        color: 1, 0, 0, 1
        on_press: motor_label.text = root.motor_switch(motor_label.text)
        on_press: root.runMotor()

    Label:
        id: motor_label
        size_hint: None, None
        text: "motor off"
        font_size: 20
        center_x: 0.4 * root.width
        center_y: 0.4 * root.height
        color: 1, 1, 1, 1
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0

    DPEAButton:
        id: toggle_button
        text: "on"
        size: 100, 100
        x: 0.5 * root.width
        y: 0.5 * root.height
        color: 1,0, 0, 1
        on_press: self.text = root.switch(self.text)
        on_press: root.changeDirection()

    DPEAButton:
        id: testbutton
        text: str(int(slider.value))
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 0, 1, 0, 1
        on_press: root.bestFunction()

    Label:
        id: motPosLabel
        size_hint: None, None
        text: "This is the Label!"
        font_size: 20
        center_x: 0.5 * root.width
        center_y: 0.25 * root.height
        color: 1, 1, 1, 1
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0,0
